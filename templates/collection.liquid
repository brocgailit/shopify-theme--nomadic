{% render 'page-header', title: collection.title %}
<div class="container">
  {% paginate collection.products by 2 %}
    {% for product in collection.products %}
      {% render 'product-card', product: product %}
    {% else %}
      <p>no matches</p>
    {% endfor %}
    {% if paginate.pages > 1 %}
      {{ paginate | default_pagination }}
    {% endif %}
  {% endpaginate %}
</div>