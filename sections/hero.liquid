<div class="hero--background{% if section.settings.filter %} bg-filter{% endif %}" style="background-image: url({{ section.settings.image | img_url: '2000x2000' }})"></div>
<div class="hero--content container {{ section.settings.align }}">
  {% if section.settings.mannaz %}
    <div class="hero--icon">
      {% render 'logo-icon.svg' %}
    </div>
  {% endif %}
  <h1 class="title">{{ section.settings.title }}</h1>
  {% if section.settings.subtitle %}
    <h2 class="subtitle">{{ section.settings.subtitle }}</h2>
  {% endif %}
  <div class="hero--actions">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'button' %}
          <a class="button secondary {{ block.settings.style }} {% if block.settings.fullwidth %}fullwidth{% endif %}" href="{{ block.settings.action }}">{{ block.settings.label }}</a>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero fullheight",
  "settings": [
    {
      "type": "checkbox",
      "id": "mannaz",
      "label": "Show Mannaz (á›—)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "id": "filter",
      "type": "checkbox",
      "label": "Use Background Filter"
    },
    {
      "id": "align",
      "type": "select",
      "label": "Alignment",
      "options": [
        { "value": "left", "label": "Left"},
        { "value": "center", "label": "Center"},
        { "value": "right", "label": "Right"}
      ]
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "id": "label",
          "type": "text",
          "label": "Label"
        },
        {
          "id": "action",
          "type": "url",
          "label": "Action"
        },
        {
          "id": "style",
          "type": "select",
          "label": "Style",
          "options": [
            { "value": "normal", "label": "Normal"},
            { "value": "outlined", "label": "Outlined"}
          ]
        },
        {
          "id": "fullwidth",
          "type": "checkbox",
          "label": "Full Width"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text overlay",
      "category": "Image"
    }
  ]
}
{% endschema %}