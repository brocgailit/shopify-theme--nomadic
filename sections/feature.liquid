<div class="feature--content container">
  <figure class="feature--image">
    <img src="{{ section.settings.image | img_url: '2000x2000' }}" alt="{{ section.settings.title }}" />
  </figure>
  <div class="feature--body">
    <h1 class="title">{{ section.settings.title }}</h1>
    {{ section.settings.text }}
  </div>
  <footer class="feature--footer">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'button' %}
          <a class="button secondary {{ block.settings.style }} {% if block.settings.fullwidth %}fullwidth{% endif %}" href="{{ block.settings.action }}">{{ block.settings.label }}</a>
      {% endcase %}
    {% endfor %}
  </footer>
</div>


{% javascript %}

nomadic.intersect(document.getElementById('shopify-section-1586211228349'), true);

{% endjavascript %}

{% stylesheet 'scss' %}

$initial-delay: 250ms;

.shopify-section.feature {
  .feature--content {
    > * {
      transition: 666ms ease-in-out;
    }
    @for $i from 1 through 4 {
      > :nth-child(#{$i}) {
        transition-delay: $initial-delay + 150ms * $i;
      }
    }
  }

  &:not(.is-intersecting) {
    .feature--content > * {
      opacity: 0;
      transform: translateY(33px);
    }
  }

  &.is-intersecting {
    .feature--content > * {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

.feature--content {
  display: grid;
  grid-row-gap: 1rem;
  grid-template-areas:
    'image'
    'body'
    'footer';
}

.feature--footer {
  grid-area: footer;
}

.feature--body {
  grid-area: body;
}

.feature--image {
  grid-area: image;
  margin: 0;
  max-width: 100%;

  img {
    width: 100%;
    height: auto;

    filter: grayscale(100%) brightness(110%) contrast(150%);
  }
}
{% endstylesheet %}

