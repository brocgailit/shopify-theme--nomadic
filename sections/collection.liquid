{%- assign collection = collections[section.settings.collection] -%}

<div class="container">
  <h3 class="title">{{ section.settings.title }}</h3>
  {% for product in collection.products %}
    {% render 'product-card', product: product %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Collection",
  "tag": "section",
  "class": "collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}