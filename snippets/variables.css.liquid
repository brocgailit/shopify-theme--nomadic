:root {
  --shopify--color-white: {{ settings.color_white }};
  --shopify--color-black: {{ settings.color_black }};
  --shopify--color-dark: {{ settings.color_dark }};
  --shopify--color-grey: {{ settings.color_grey }};
  --shopify--color-dark-grey: {{ settings.color_dark_grey }};
  --shopify--color-light: {{ settings.color_light }};
  --shopify--color-primary: {{ settings.color_primary }};
  --shopify--color-primary--invert: {{ settings.color_primary_invert }};
  --shopify--color-primary--highlight: {{ settings.color_primary_highlight }};
  --shopify--color-secondary: {{ settings.color_secondary }};
  --shopify--color-secondary--invert: {{ settings.color_secondary_invert }};
  --shopify--color-secondary--highlight: {{ settings.color_secondary_highlight }};
  --shopify--color-link: {{ settings.color_link }};
  --shopify--color-link--invert: {{ settings.color_link_invert }};
  --shopify--color-link--highlight: {{ settings.color_link_highlight }};
  --shopify--color-success: {{ settings.color_success }};
  --shopify--color-success--invert: {{ settings.color_success_invert }};
  --shopify--color-success--highlight: {{ settings.color_success_highlight }};
