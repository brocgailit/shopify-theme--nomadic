:root {
  --color-white: {{ settings.color_white }};
  --color-black: #262825;
  --color-dark: #3D3F3D;
  --color-grey: #4C4E4B;
  --color-light: #E6E5DF;
  --color-primary: #F0CD6C;
  --color-primary--invert: #262825;
  --color-primary--highlight: #F9DC8E;
  --color-secondary: #E2997C;
  --color-secondary--highlight: #EBB7A2;
  --color-secondary--invert: #FFF;
  --color-success: #6B7A66;
  --family-serif: 'EB Garamond', serif;
  --family-sans-serif: 'Roboto', sans-serif;
}
