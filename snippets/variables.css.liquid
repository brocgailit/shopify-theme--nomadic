:root {
  --color-white: {{ settings.color_white }};
  --color-black: {{ settings.color_black }};
  --color-dark: {{ settings.color_dark }};
  --color-grey: {{ settings.color_grey }};
  --color-light: {{ settings.color_light }};
  --color-primary: {{ settings.color_primary }};
  --color-primary--invert: {{ settings.color_primary_invert }};
  --color-primary--highlight: {{ settings.color_primary_highlight }};
  --color-secondary: {{ settings.color_secondary }};
  --color-secondary--invert: {{ settings.color_secondary_invert }};
  --color-secondary--highlight: {{ settings.color_secondary_highlight }};
  --color-success: {{ settings.color_success }};
  --color-success--invert: {{ settings.color_success_invert }};
  --color-success--highlight: {{ settings.color_success_highlight }};
  --family-serif: 'EB Garamond', serif;
  --family-sans-serif: 'Roboto', sans-serif;
}
